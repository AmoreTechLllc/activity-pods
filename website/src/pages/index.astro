---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Solid from '~/components/widgets/Solid.astro';
import ActivityPub from '~/components/widgets/ActivityPub.astro';
import ActivityPods from '~/components/widgets/ActivityPods.astro';
import Choices2 from '~/components/widgets/Choices2.astro';
import Developers from '~/components/widgets/Developers.astro';
import Applications from '~/components/widgets/Applications.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero />
	<ActivityPub />
	<Solid />
	<ActivityPods />
	<Choices2 />
	<Features />
	<Applications />
	<Developers />
</Layout>
